#!/bin/sh

echo ""
echo "========================================"
echo "           PRE-COMMIT CHECKS            "
echo "========================================"

echo "Running lint-staged..."
pnpm exec lint-staged
status=$?

if [ $status -ne 0 ]; then
  echo ""
  echo "----------------------------------------"
  echo "✗ Linting failed. Commit aborted."
  echo "----------------------------------------"
  exit 1
fi

echo ""
echo "----------------------------------------"
echo "✓ All pre-commit checks passed."
echo "----------------------------------------"
echo ""
exit 0
