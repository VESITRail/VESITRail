#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "----------------------------------------"
echo "Running pre-commit checks..."
echo "----------------------------------------"

npx lint-staged
status=$?

if [ $status -ne 0 ]; then
  echo ""
  echo "Linting failed. Aborting commit."
  echo "Run 'npm run lint' locally to review and fix issues."
  echo "----------------------------------------"
  exit 1
fi

echo ""
echo "All pre-commit checks passed successfully."
echo "----------------------------------------"
exit 0
