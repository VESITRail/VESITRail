#!/bin/sh

echo ""
echo "========================================"
echo "             PRE-PUSH CHECKS             "
echo "========================================"

echo "Running build..."
npm run build
status=$?

if [ $status -ne 0 ]; then
  echo ""
  echo "----------------------------------------"
  echo "✗ Build failed. Push aborted."
  echo "Please fix build errors before pushing."
  echo "----------------------------------------"
  exit 1
fi

echo ""
echo "----------------------------------------"
  echo "✓ All pre-push checks passed."
echo "----------------------------------------"
echo ""
exit 0
